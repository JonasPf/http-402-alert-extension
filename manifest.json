{
  "manifest_version": 3,
  "name": "HTTP 402 Alert",
  "version": "1.0.0",
  "description": "Displays a popup alert whenever a 402 Payment Required HTTP status code is detected",
  "permissions": [
    "webRequest",
    "notifications",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo-16.png",
      "48": "logo-48.png",
      "128": "logo-128.png"
    }
  },
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  }
}